package com.side_on.service;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartHttpServletRequest;
import com.side_on.dao.RecruitDao;
import com.side_on.dto.RecruitBoard;
import com.side_on.util.FileUtil;

import lombok.extern.slf4j.Slf4j;

@Service
@Slf4j
public class RecruitService {
	
	@Autowired
	private RecruitDao recruitDao;
	
	/** 게시글 등록 */
	@Resource(name="fileUtil")
	private FileUtil fileUtil;
	
	
	public void newRecruit(RecruitBoard recruitBoard, MultipartHttpServletRequest mpRequest) throws Exception {
		
		recruitDao.newRecruit(recruitBoard);
		
		List<Map<String,Object>> list = fileUtil.parseInsertFileInfo(recruitBoard, mpRequest); 
		int size = list.size();
		for(int i=0; i<size; i++){ 
			recruitDao.insertFile(list.get(i)); 
		}
	}
	

}
